# Backend runtime mode: random | passive | strategy
AI_MODE=strategy

# Optional deterministic AI behavior
# AI_SEED=123

# Delay between AI turns/actions in milliseconds (set 0 for no delay)
AI_TURN_DELAY_MS=800

# Pause after hand end before starting next hand (winner message window)
HAND_END_PAUSE_MS=5000

# Optional custom strategy file path
# AI_STRATEGY_PATH=backend/ai/strategy.json

# Print game turn-by-turn trace logs to terminal (true|false)
GAME_TRACE=true
